{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true
	},
	"include": ["./src/**/*.ts", "./scripts/**/*.ts"]
}
